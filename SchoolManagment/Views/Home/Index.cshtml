@{
    ViewBag.Title = "Home Page";
}
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/Content/Images/Slide1.jpg" alt="First slide">
            <div class="carousel-caption"><span class="alert-success">We Learn</span> </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/Images/Slide2.jpg" alt="Second slide">
            <div class="carousel-caption"><span class="alert-warning">Never Stop</span> </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/Images/Slide3.jpg" alt="Third slide">
            <div class="carousel-caption"><span class="btn-success">We Can</span> </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/Images/Slide4.jpg" alt="Third slide">
            <div class="carousel-caption"><span class="btn-primary">Just Do It</span> </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-6">
        <h2> Courses </h2>
        <p>
            Use this option to view all courses and offerings at this intitution.
        </p>
            
        <p>@Html.ActionLink("Learn More" , "Index" , "Courses" , new {@class = "btn btn-primary" })</p>

    </div>
    <div class="col-md-6">
        <h2>Students</h2>
        <p>view all students that are enrolled at this instiution</p>
        <p>@Html.ActionLink("Learn More", "Index", "Students", new { @class = "btn btn-primary" })</p>

    </div>
   
</div>